<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full h-screen bg-full bg-zinc-900 p-10 text-white">
        <a href="/">Home</a>
        <h1 class="text-3xl tracking-tighter mb-3 mt-10">All Hosts</h1>

        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 bg-zinc-500 rounded-lg object-cover overflow-hidden">
                    <img class="w-full h-full object-cover" src= "<%= user.image %>">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-200">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>

                    </div>
                </div>
            <%  }) %>   
        </div>
         
    </div>
</body>
</html>
